- post  = page["post"]
.post
  %meta{:name=>"twitter.card", :content=>"summary"}
  %meta{:name=>"twitter.site", :content=>"@WildFlyAS"}
  %meta{:name=>"twitter.title", :content=>post.title}
  %meta{:name=>"twitter.description", :content=>post.summary}
 
  %h2.title
    %a{:href=>"#{site.base_url}#{post.url}"}= post.title
  .byline
    %p
      = "Posted by " + lookup_name(post.author) + " on " + post.date.strftime('%b %d, %Y');
      - for tag in post.tags
        %a.label.label-info.pull-right.blah{:href=>"#{site.base_url}#{tag.primary_page.url}"}<= tag.to_s
        %span.pull-right &nbsp;
  %p
    ~ post.content
